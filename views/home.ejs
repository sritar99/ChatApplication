                            <hr/>
                            <div class="card">
                                <p class="newgroup" style="padding-top: 20px;padding-left: 20px;">
                                    NEW GROUP
                                </p>
                                <hr/>
                                <form action="/home" method="POST">
                                    <input class="form-control" style="margin: 10px;width:85%;margin-left:20px;" type="text" name="group" placeholder="Group Name">
                                    <input class="form-control" style="margin: 10px;width:85%;margin-left:20px;" type="text" name="country" placeholder="Country Name" style="padding-top: 10px;">
                        
                                    <button class="btn add-apply upload-btn" type="button" style="margin: 10px;width:85%;margin-left:20px;">Upload Image</button>
                                  <input type="file" name="upload" id="upload-input" style="display:none">
                                  <button class="btn add-apply">Add Group</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


               

            </div>


            


            
            <div class="col-md-9">
                <div>
                    <% _.forEach(chunk,function(val){ %>
                    <div class="category-list">
                        <div class="row">
                            <% _.forEach(val,function(val1){ %>
                            <form action="#" method="post" id="add-fav">
                                <div class="item col-md-4">
                                    <a style="text-decoration: none;" href="/group/<%= val1.name %>">
                                    <div class="thumbnail">
                                       <img src="https://realtimechat.s3.ap-south-1.amazonaws.com/<%= val1.image %>" alt="">
                                        <div class="caption">
                                            <h4><%= val1.name %></h4>
                                            
                                            <div class="row">
                                                <div class="col-xs-12 col-md-6">
                                                    <p>
                                                        <%= val1.country %>
                                                    </p>
                                                </div>
                                                
                                                <div class="col-xs-12 col-md-6">
                                                    <button class="btn add-fav">
                                                        Favourite
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                </div>
                            </form>
                            <% })%>
                        </div>
                    </div>
                    <% })%>
                </div>
            </div>
        </div>
    </div>
